so ~/dots/.nav/keymap.nav
so ~/dots/.nav/syntax.nav
so ~/dots/.nav/col.nav

fu! pic(name)
  new
  cd $name
  bu term
end

let mpv_arg = --fs --input-unix-socket=$HOME/.mpv/socket

fu! op_before_vid
  if %prev
    !mpvctl stop
  end
  ret mpv $mpv_arg %fullpath
end

fu! op_before_mu
  if %prev
    !mpvctl stop
  end
  ret mpv $mpv_arg %fullpath
end

fu! test(a)
  return test
end

op Video    "op_before_vid()"
op Music    "op_before_mu()"
op Image    "sxiv -m %fullpath"
op Document "mupdf %fullpath"

new fm
